{
  "version": 2,
  "builds": [
    {
      "src": "src/index.js",
      "use": "@vercel/node",
      "config": { 
        "includeFiles": ["static/**", "src/**"],
        "maxLambdaSize": "50mb" 
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "src/index.js"
    },
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    }
  ]
}